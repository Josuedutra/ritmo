# ==============================================================================
# RITMO MVP - Environment Variables
# ==============================================================================
# Copy this file to .env.local for local development

# ------------------------------------------------------------------------------
# DATABASE (Neon or Supabase PostgreSQL)
# ------------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@host:5432/ritmo?sslmode=require"

# ------------------------------------------------------------------------------
# AUTHENTICATION (NextAuth.js)
# ------------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ------------------------------------------------------------------------------
# CRON SECURITY
# ------------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
CRON_SECRET="your-cron-secret-here"

# ------------------------------------------------------------------------------
# EMAIL (Resend)
# ------------------------------------------------------------------------------
RESEND_API_KEY="re_test_xxx"
EMAIL_FROM="Ritmo <noreply@ritmo.app>"

# ------------------------------------------------------------------------------
# STORAGE (Supabase)
# ------------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL="https://xxx.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ------------------------------------------------------------------------------
# BILLING (Stripe)
# ------------------------------------------------------------------------------
STRIPE_SECRET_KEY="sk_test_xxx"
STRIPE_WEBHOOK_SECRET="whsec_xxx"
STRIPE_PRICE_STARTER="price_xxx"
STRIPE_PRICE_PRO="price_xxx"
STRIPE_PRICE_ENTERPRISE="price_xxx"

# ------------------------------------------------------------------------------
# FEATURE FLAGS
# ------------------------------------------------------------------------------
# Set to "false" to disable Easter-based holidays (reduces complexity)
INCLUDE_EASTER_HOLIDAYS="true"

# Show demo credentials on login page (set to "true" for demo/staging)
NEXT_PUBLIC_SHOW_DEMO="false"

# ------------------------------------------------------------------------------
# OBSERVABILITY (Sentry)
# ------------------------------------------------------------------------------
# Sentry DSN for error tracking (get from sentry.io project settings)
SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"

# Environment name for Sentry (development, staging, production)
SENTRY_ENVIRONMENT="development"
NEXT_PUBLIC_SENTRY_ENVIRONMENT="development"

# ------------------------------------------------------------------------------
# OPS ENDPOINTS
# ------------------------------------------------------------------------------
# Secret token for /api/ops/* endpoints (generate with: openssl rand -hex 32)
OPS_TOKEN="your-ops-token-here"

# Admin emails (comma-separated, for /admin/ops access)
ADMIN_EMAILS="admin@example.com"

# ------------------------------------------------------------------------------
# VERCEL (auto-set by Vercel)
# ------------------------------------------------------------------------------
# VERCEL_GIT_COMMIT_SHA
# VERCEL_REGION
